﻿@model AcunmedyaAkademiProject2.Entities.Testimonial

@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Refarans Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">


                            @Html.HiddenFor(x => x.TestimonialId)

                            <label>Referans Ad Soyad</label>
                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            <br />

                            <label>Yorum</label>
                            @Html.TextAreaFor(x => x.CommentDetail, new { @class = "form-control", rows = 10 })
                            <br />

                            <label>Resim</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />

                            <button type="submit" class="btn btn-primary">Güncelle</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>