@model List < AcunmedyaAkademiProject2.Entities.Testimonial>

@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Referanslar</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-light table-striped table-hover shadow-sm rounded">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Referans</th>
                                    <th scope="col">Yorum</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.TestimonialId</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.CommentDetail</td>
                                        <td><img src="@item.ImageUrl" style="width:100px; height:auto;" /></td>
                                        <td><a href="/AdminTestimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger btn-sm">Sil</a></td>
                                        <td><a href="/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/AdminTestimonial/CreateTestimonial/" class="btn btn-dark">Yeni Hakkımda Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>  