@model List<AcunmedyaAkademiProject2.Entities.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<style>

    .about_img img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-radius: 10px;
    }

    .col-md-6 h1 {
        margin-top: -40px;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="row align-items-center">
                <div class="col-md-6 text-center">
                    <div class="about_img">
                        <img src="@item.ImageUrl" alt="Hakkımızda">
                    </div>
                </div>
                <div class="col-md-6">
                    <h1 class="about_taital">@item.Title</h1>
                    <p class="about_text">@item.Description</p>
                    <div class="read_bt_1"><a href="#">Daha Fazlasını Oku</a></div>
                </div>
            </div>

        }
    </div>
</div>

<div class="copyright_section margin_top90">
    <div class="container">
        <p class="copyright_text">&copy; @DateTime.Now.Year Acunmedya Sweet. Tüm Hakları Saklıdır.</p>
    </div>
</div>