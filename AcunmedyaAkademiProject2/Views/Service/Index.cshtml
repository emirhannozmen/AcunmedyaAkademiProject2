@model List<AcunmedyaAkademiProject2.Entities.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>

    .services_section_2 .row {
        margin-bottom: 30px;
    }
    .services_section_2 i {
        color: #fc95c4;
    }

</style>

<div class="services_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="services_taital"> Hizmetlerimiz </h1>
                <p class="services_text">Hizmetlerimiz, her adımda daha verimli çözümler üretmek için tasarlanmıştır.</p>
            </div>
        </div>

        <div class="services_section_2">
            @for (int i = 0; i < Model.Count; i += 3)
            {
                <div class="row">
                    @for (int j = i; j < i + 3 && j < Model.Count; j++)
                    {
                        var item = Model[j];
                        <div class="col-md-4">
                            <div class="services_box">
                                <h5 class="tasty_text">
                                    <span class="icon_img">
                                        <i class="@item.Icon fa-2x"></i>
                                    </span>
                                    @item.Title
                                </h5>
                                <p class="lorem_text">@item.Description</p>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<div class="copyright_section margin_top90">
    <div class="container">
        <p class="copyright_text">&copy; @DateTime.Now.Year Acunmedya Sweet. Tüm Hakları Saklıdır.</p>
    </div>
</div>