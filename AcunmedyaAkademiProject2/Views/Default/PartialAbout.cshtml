@model List<AcunmedyaAkademiProject2.Entities.About>

<style>
    .about_img img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-radius: 10px; 
    }

    .col-md-6 h1 {
        margin-top: -40px;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="row align-items-center">
                <div class="col-md-6 text-center">
                    <div class="about_img">
                        <img src="@item.ImageUrl" alt="Hakkımızda">
                    </div>
                </div>
                <div class="col-md-6">
                    <h1 class="about_taital">@item.Title</h1>
                    <p class="about_text">@item.Description</p>
                    <div class="read_bt_1"><a href="/About/Index">Daha Fazlasını Oku</a></div>
                </div>
            </div>

        }
    </div>
</div>