﻿@model AcunmedyaAkademiProject2.Entities.About

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Hakkımızda Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">


                            @Html.HiddenFor(x => x.AboutId)

                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />

                            <label>Açıklama</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 10 })
                            <br />

                            <label>Görsel URL</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />

                            <button type="submit" class="btn btn-primary">Güncelle</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>