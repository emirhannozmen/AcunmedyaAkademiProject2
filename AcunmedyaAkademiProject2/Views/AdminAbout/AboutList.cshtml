@model List<AcunmedyaAkademiProject2.Entities.About>

@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Hakkımızda</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-light table-striped table-hover shadow-sm rounded">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.AboutId</th>
                                        <td>@item.Title</td>
                                        <td>@(item.Description.Length > 150 ? item.Description.Substring(0, 150) + "..." : item.Description)</td>
                                        <td><img src="@item.ImageUrl" style="width:140px; height:auto;" /></td>
                                        <td><a href="/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-danger btn-sm">Sil</a></td>
                                        <td><a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/AdminAbout/CreateAbout/" class="btn btn-dark">Yeni Hakkımda Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>  