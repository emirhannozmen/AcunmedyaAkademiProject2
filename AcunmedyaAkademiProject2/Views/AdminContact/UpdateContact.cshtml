﻿@model AcunmedyaAkademiProject2.Entities.Info

@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">İletişim Güncelleme Sayfası</strong>
                    </div>
                    <div class="card-body">
                        <form method="post">


                            @Html.HiddenFor(x => x.InfoId)

                            <label>E-posta</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <br />

                            <label>Konum</label>
                            @Html.TextAreaFor(x => x.Location, new { @class = "form-control", rows = 10 })
                            <br />

                            <label>Telefon</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            <br />

                            <button type="submit" class="btn btn-primary">Güncelle</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>