@model List<AcunmedyaAkademiProject2.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Kategori Listesi</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-light table-striped table-hover shadow-sm rounded">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.CategoryId</th>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm">Sil</a></td>
                                        <td><a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }   

                            </tbody>
                        </table>
                        <a href="/AdminCategory/CreateCategory/" class="btn btn-dark">Yeni Kategori Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>  