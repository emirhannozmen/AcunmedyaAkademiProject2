@model  AcunmedyaAkademiProject2.Entities.Info

<div class="col-md-8">

    @if (Model != null)
    {
        <div class="location_text">
            <ul>
                <li>
                    <a href="#">
                        <span class="padding_left_10 active"><i class="fa fa-map-marker" aria-hidden="true"></i></span>
                        @Model.Location
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="padding_left_10"><i class="fa fa-phone" aria-hidden="true"></i></span>
                        Telefon : @Model.Phone
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="padding_left_10"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                        Email : @Model.Email
                    </a>
                </li>
            </ul>
        </div>
    }
    else
    {
        <p>Bilgi bulunamadı.</p>
    }

    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d14289.023286974765!2d29.04796937441063!3d41.15859224209801!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1741394599132!5m2!1str!2str"
            width="100%" height="390" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
    </iframe>


    <div class="footer_social_icon">
        <ul>
            <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
            <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
            <li><a href="https://www.linkedin.com/in/emirhannozmen/"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
            <li><a href="https://www.instagram.com/emirtth"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
        </ul>
    </div>
</div>