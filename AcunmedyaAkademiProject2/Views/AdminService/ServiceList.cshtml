@model List<AcunmedyaAkademiProject2.Entities.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Hizmetlerimiz</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-light table-striped table-hover shadow-sm rounded">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Hizmet</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.ServiceId</th>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><i class="@item.Icon"></i></td>
                                        <td><a href="/AdminService/DeleteService/@item.ServiceId" class="btn btn-danger btn-sm">Sil</a></td>
                                        <td><a href="/AdminService/UpdateService/@item.ServiceId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/AdminService/CreateService/" class="btn btn-dark">Yeni Hizmet Girişi</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>  